# EnviroComply Environment Variables
# ===================================
# Copy this file to .env and fill in your values

# ==========================================================================
# Application Settings
# ==========================================================================
DEBUG=false
LOG_LEVEL=INFO

# ==========================================================================
# LLM Configuration
# ==========================================================================
# OpenAI (Required)
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Ollama (Optional - for local LLM fallback)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3:8b

# ==========================================================================
# Vector Database (Weaviate)
# ==========================================================================
WEAVIATE_URL=http://localhost:8080
# WEAVIATE_API_KEY=  # Only needed for Weaviate Cloud

# ==========================================================================
# PostgreSQL Database
# ==========================================================================
DATABASE_URL=postgresql://enviro:enviro@localhost:5432/envirocomply

# ==========================================================================
# EPA Data Sources
# ==========================================================================
# Optional - EPA API key for higher rate limits
# EPA_API_KEY=

# Monitoring settings
EPA_CHECK_INTERVAL_HOURS=24
EPA_LOOKBACK_DAYS=30

# ==========================================================================
# Agent Configuration
# ==========================================================================
AGENT_MAX_ITERATIONS=10
AGENT_VERBOSE=true
AGENT_REPORT_OUTPUT_DIR=./reports

# Risk thresholds (0-1)
AGENT_CRITICAL_RISK_THRESHOLD=0.8
AGENT_HIGH_RISK_THRESHOLD=0.6
AGENT_MEDIUM_RISK_THRESHOLD=0.3

# Deadline thresholds (days)
AGENT_CRITICAL_DEADLINE_DAYS=30
AGENT_HIGH_DEADLINE_DAYS=90

# ==========================================================================
# Notifications (Optional)
# ==========================================================================
# Email
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# ALERT_EMAIL=compliance@yourcompany.com

# Slack
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx

# ==========================================================================
# State Regulations
# ==========================================================================
# Primary states to monitor (comma-separated)
STATE_MONITORED_STATES=TX,OK,WY,NM,CO,ND,LA,PA

# ==========================================================================
# Redis (Optional - for caching)
# ==========================================================================
REDIS_URL=redis://localhost:6379/0

# ==========================================================================
# Security (Production)
# ==========================================================================
# SECRET_KEY=your-secret-key-here
# ALLOWED_HOSTS=yourdomain.com,api.yourdomain.com
# CORS_ORIGINS=https://yourdomain.com
